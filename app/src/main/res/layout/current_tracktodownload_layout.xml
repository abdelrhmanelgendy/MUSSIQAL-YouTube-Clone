<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    >

    <ImageView

        android:id="@+id/currentDownloadInfo_ImageView"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_80sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_car_demmo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentDownloadInfo_txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:50"
        app:layout_constraintBottom_toBottomOf="@id/currentDownloadInfo_ImageView"
        android:background="@color/black"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/currentDownloadInfo_ImageView"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/currentDownloadInfo_txtSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummySongName"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/currentDownloadInfo_ImageView"

        />

</androidx.constraintlayout.widget.ConstraintLayout>