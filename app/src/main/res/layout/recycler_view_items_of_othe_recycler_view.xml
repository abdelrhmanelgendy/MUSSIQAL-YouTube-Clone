<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerViewItemOfMultipleRecycler_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:paddingStart="@dimen/_15sdp"

     >
     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/recyclerItemOfOtherRecycler_circularImage"
         android:layout_width="@dimen/_35sdp"
         android:layout_height="@dimen/_35sdp"
         android:scaleType="centerCrop"
         android:src="@drawable/classic" />

     <TextView
         android:id="@+id/recyclerItemOfOtherRecycler_collectionName"
android:layout_gravity="center_vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingStart="@dimen/_15sdp"
         android:text="Work out"
         android:textColor="@color/white"
         android:textSize="@dimen/_18sdp"
         android:textStyle="bold" />
 </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerItemOfOtherRecycler_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        tools:listitem="@layout/special_recycler_view_playlist_items_no_border" />
</LinearLayout>

